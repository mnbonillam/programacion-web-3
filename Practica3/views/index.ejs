<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lista de Libros</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <h1 class="text-center mb-4">DEFENSA DE LABORATORIO</h1>

    <a href="/agregar" class="btn btn-success mb-3">Agregar libro</a>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Autor</th>
                <th>Género</th>
                <th>Año</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% libros.forEach(libro => { %>
                <tr>
                    <td><%= libro.id %></td>
                    <td><%= libro.titulo %></td>
                    <td><%= libro.autor %></td>
                    <td><%= libro.genero %></td>
                    <td><%= libro.anio_publicacion %></td>
                    <td>
                        <a href="/editar/<%= libro.id %>" class="btn btn-warning btn-sm">Editar</a>
                        <a href="/eliminar/<%= libro.id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro?');">Eliminar</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
